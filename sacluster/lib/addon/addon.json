{
   "Common":
    {
        "Firewall":
        {
            "Zone":{
                "CentOS 7.9 (2009) 64bit":
                {
                    "Head": [
                        "firewall-cmd --zone=trusted --change-interface=eth1 --permanent",
                        "firewall-cmd --reload"
                    ],
                    "Compute":[
                        "firewall-cmd --zone=trusted --change-interface=eth0 --permanent",
                        "firewall-cmd --zone=trusted --change-interface=eth1 --permanent",
                        "firewall-cmd --reload"
                    ]
                },
                "CentOS Stream 8 (20201203) 64bit":
                {
                    "Head": [
                        "firewall-cmd --zone=trusted --change-interface=eth1 --permanent",
                        "firewall-cmd --reload"
                    ],
                    "Compute":[
                        "firewall-cmd --zone=trusted --change-interface=eth0 --permanent",
                        "firewall-cmd --zone=trusted --change-interface=eth1 --permanent",
                        "firewall-cmd --reload"
                    ]
                }
            },
            "sub":
            {
                "reload": "--reload"
            },
            "Proxy":
            {
                "Squid":
                {
                    "CentOS 7.9 (2009) 64bit":
                    {
                        "Head"      : ["firewall-cmd --permanent --zone=trusted --add-port=3128/tcp"],
                        "Compute"   : ["firewall-cmd --permanent --zone=trusted --add-port=3128/tcp"]
                    }
                }
            },
            "Nfs":
            {
                "Nfs-utils":
                {
                    "CentOS 7.9 (2009) 64bit":
                    {
                        "Head": ["firewall-cmd --add-port=3128/tcp --permanent"],
                        "Compute": ["firewall-cmd --add-port=3128/tcp --permanent"]
                    }
                }
            },
            "Monitor":
            {
                "Ganglia":
                {
                    "CentOS 7.9 (2009) 64bit":
                    {
                        "Head": 
                        [
                            "firewall-cmd --add-port=8649/tcp --permanent", 
                            "firewall-cmd --add-port=8649/udp --permanent",
                            "firewall-cmd --add-port=8651/tcp --permanent", 
                            "firewall-cmd --add-port=8652/tcp --permanent"
                        ],
                        "Compute":
                        [
                            "firewall-cmd --add-port=8649/tcp --permanent", 
                            "firewall-cmd --add-port=8649/udp --permanent"
                        ]
                    }
                }
            }
        }, "firewall_comment": "End of firewall info",

        "hosts":
        {
            "cmd": ["echo"],
            "Ubuntu": "",
            "CentOS": "/etc/hosts"
        },

        "Systemctl":
        {
            "sub":["start", "stop", "enable", "disable"]
        }

    }, "// common_comments": "END of common info",

    "MiddleWare":
    {
        "Proxy":
        {
            "Squid":
            {
                "Packege":
                {
                    "CentOS 7.9 (2009) 64bit": 
                    {
                        "Head": [
                            "yum -y install squid",
                            "yum -y install httpd-tools",
                            "yum -y update openssl"
                        ],
                        "Compute": []
                    },
                    "Ubuntu20.04": 
                    {
                        "Head": "",
                        "Compute": ""
                    }
                },
                "Port":
                {
                    "CentOS 7.9 (2009) 64bit": 
                    {
                        "Head"      : ["3128/tcp"],
                        "Compute"   : ["3128/tcp"]
                    }
                },
                "Daemon":
                {
                    "CentOS 7.9 (2009) 64bit": "squid"
                }
            }, "// squid_comments": "END of squid"

        }, "// proxy_comments": "END of Proxy",

        "Nfs":
        {
            "Nfs-utils":
            {
                "Packege":
                {
                    "CentOS7":
                    { 
                        "Head": "yum -y install nfs-utils",
                        "Compute": "yum -y install nfs-utils"
                    },
                    "Ubuntu20.04": 
                    {
                        "Head": "apt -y install nfs-utils",
                        "Compute": "apt -y install nfs-utils"
                    }
                },
                "Port":
                {
                    "CentOS7": 
                    {
                        "Head": ["3128/tcp"],
                        "Compute": ["3128/tcp"]
                    }
                },
                "Daemon":
                {
                    "CentOS7":
                    {
                        "Head": "nfs-server"
                    }
                },
                "Command":
                {

                }
            }, "// nfs-utils_comments": "END of nfs-utils"

        }, "// nfs_comments": "END of NFS",

        "Monitor":
        {
            "Ganglia":
            {
                "Packege": 
                {
                    "CentOS7": 
                    {
                        "Head": "yum -y rrdtool rrdtool-devel ganglia-web ganglia-gmetad ganglia-gmond ganglia-gmond-python httpd httpd-tools apr-devel zlib-devel libconfuse-devel expat-devel pcre-devel",
                        "Compute": "yum -y install ganglia-gmond"
                    }
                },
                "Port":
                {
                    "CentOS7": 
                    {       
                        "Head": ["8649/tcp", "8649/udp", "8651/tcp", "8652/tcp"],
                        "Compute": ["8649/tcp", "8649/udp"]
                    }
                },
                "Daemon":
                {
                    "CentOS7":
                    {
                        "Head": "httpd gmond gmetad",
                        "Compute": "gmond"
                    }
                }
            }, "// ganglia_comment": "END of Ganglia"

        }, "// monitor_comment": "END of Monitor",

        "Scheduler":
        {

        }, "// scheduler_comment": "END of Scheduler"

    }, "// middleware_comment": "END of Middleware"
}