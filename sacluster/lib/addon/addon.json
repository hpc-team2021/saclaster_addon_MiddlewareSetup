                },
                "Port":
                {
                    "CentOS7": 
                    [
                        "3128/tcp"
                    ]
                },
                "Daemon":
                {
                    "CentOS7":
                    {
                        "head": "nfs-server"
                    }
                },
                "Command":
                {

                }
            }, "// nfs-utils_comments": "END of nfs-utils"

        }, "// nfs_comments": "END of NFS",

        "Monitor":
        {
            "Ganglia":
            {
                "Packege": 
                {
                    "CentOS7": 
                    {
                        "head": "yum -y rrdtool rrdtool-devel ganglia-web ganglia-gmetad ganglia-gmond ganglia-gmond-python httpd httpd-tools apr-devel zlib-devel libconfuse-devel expat-devel pcre-devel",
                        "compute": "yum -y install ganglia-gmond"
                    }
                },
                "Port":
                {
                    "CentOS7": 
                    {       
                        "head": 
                        [
                            "8649/tcp",
                            "8649/udp",
                            "8651/tcp",
                            "8652/tcp"
                        ],
                        "compute": 
                        [
                            "8649/tcp",
                            "8649/udp"
                        ]
                    }
                },
                "Daemon":
                {
                    "CentOS7":
                    {
                        "head": "httpd gmond gmetad",
                        "compute": "gmond"
                    }
                }
