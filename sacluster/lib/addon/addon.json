                {
                    "CentOS7": "squid"
                }
            }, "// squid_comments": "END of squid"

        }, "// proxy_comments": "END of Proxy",

        "Nfs":
        {
            "nfs-utils":
            {
                "Packege":
                {
                    "CentOS7": "yum -y install nfs-utils",
