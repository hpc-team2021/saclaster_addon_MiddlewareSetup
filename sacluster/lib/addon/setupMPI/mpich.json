{
    "CentOS 7.9 (2009) 64bit":
    {
        "command":
        {
            "Head": 
            [
                "sudo adduser mpiuser",
                "passwd mpiuser",
                "su - mpiuser",
                "ssh-keygen -t dsa",
                "ssh-copy-id",
                "eval `ssh-agent`",
                "ssh-add ~/.ssh/id_dsa",
                "mkdir share",
                "echo \"/home/mpiuser/cloud *(rw,sync,no_root_squash,no_subtree_check)\" >> /etc/exports",
                "exportfs -a",
                "sudo systemctl nf-utils",
                "yum -y install python3",
                "cd ~/share",
                "wget https://www.mpich.org/static/downloads/4.0.2/mpich-4.0.2.tar.gz",
                "tar -xzf mpich-4.0.2.tar.gz",
                "cd mpich-4.0.2",
                "./configure --prefix=/usr/local",
                "make",
                "sudo make install"
            ],
            "Compute":
            [
                "sudo adduser mpiuser",
                "passwd mpiuser",
                "su - mpiuser", 
                "sudo yum -y install nfs-utils",
                "mkdir share",
                "sudo mount -t nfs manager:/home/mpiuser/share ~/share",
                "echo \"manager:/home/mpiuser/share /home/mpiuser/share nfs\" >> /etc/fstab",
                "cd ~share/mpich-4.0.2",
                "./configure --prefix=/usr/local",
                "make",
                "sudo make install"
            ]
        }
    }
}